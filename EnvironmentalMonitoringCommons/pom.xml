<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>at.fhooe.mcm441.commons</groupId>
  <artifactId>EnvironmentalMonitoringCommons</artifactId>
  <version>0.0.1</version>
  <packaging>jar</packaging>

  <name>EnvironmentalMonitoringCommons</name>
  
  <parent>
	  <groupId>at.fhooe.mcm441</groupId>
	  <artifactId>EnvironmentalMonitoringProject</artifactId>
	  <version>0.0.1</version>
    <relativePath>../EnvironmentalMonitoringProject</relativePath>
  </parent>
  
  <build>
  	<plugins>
      <plugin>
		    <groupId>org.apache.maven.plugins</groupId>
		    <artifactId>maven-compiler-plugin</artifactId>
		    <version>2.0.2</version>
		    <configuration>
		        <source>1.6</source>
		        <target>1.6</target>
		    </configuration>
		</plugin>
    
    <plugin>
      <artifactId>maven-assembly-plugin</artifactId>
      <version>2.1</version> 
      <configuration>
        <finalName>EnvironmentalMonitoringCommons</finalName>
        <descriptors>
          <descriptor>src/resources/dist.xml</descriptor>
        </descriptors>
        <archive>
          <manifest>
            <!--<mainClass>at.Main</mainClass>-->
          </manifest>
        </archive>
      </configuration>
    </plugin>

	</plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-api</artifactId>
    	<version>1.6.1</version>
    </dependency>
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-simple</artifactId>
    	<version>1.6.1</version>
    </dependency>
    <dependency>
    	<groupId>org.json</groupId>
    	<artifactId>json</artifactId>
    	<version>20090211</version>
    </dependency>
  </dependencies>
</project>
